<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/roxo"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="25dp">

    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left|center_horizontal|center"
        android:background="@drawable/fundomenu"/>

    //teste

    <Button
        android:id="@+id/gameboca"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:layout_gravity="left|center_horizontal|center"
        android:background="@drawable/boca"

        android:onClick="jogarboca"/>

    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right|center"
        android:background="@drawable/fundomenu"/>

    <Button
        android:id="@+id/gamevideo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right|center"
        android:background="@drawable/play"

        android:onClick="gamevideo"/>

    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="start|center_vertical"
        android:background="@drawable/fundomenu"/>

    <Button
        android:id="@+id/gameanimal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="35dp"
        android:layout_gravity="start|center_vertical"
        android:background="@drawable/panda"

        android:onClick="jogaranimal" />

    <View
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right|center"
        android:background="@drawable/fundomenu"/>

    <Button
        android:id="@+id/gameEncVocal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right|center"
        android:background="@drawable/abcimg"

        android:onClick="gameEncVocal"/>

    <ImageView
        android:layout_width="230dp"
        android:layout_height="220dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/gamer"/>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/brilho"
        android:background="@drawable/brilho"
        />
</FrameLayout>