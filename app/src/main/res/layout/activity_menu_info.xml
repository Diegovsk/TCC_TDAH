<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roxo"
    android:orientation="horizontal"
    tools:context=".MenuInfoActivity">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.938"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:background="@drawable/fundomenu2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.238" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="230dp"
            android:layout_height="220dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/gamer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="116dp"
            android:background="@drawable/fundomenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.237"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/gameanimal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="132dp"


            android:background="@drawable/panda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.262"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="268dp"
            android:background="@drawable/fundomenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.238"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/gameboca"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="284dp"
            android:background="@drawable/boca"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.263"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="116dp"
            android:background="@drawable/fundomenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.73"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/gameEncVocal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="132dp"

            android:background="@drawable/abcimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.701"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="268dp"
            android:background="@drawable/fundomenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.729"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/gamevideo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="284dp"

            android:background="@drawable/play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.707"
            app:layout_constraintStart_toStartOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/brilho"
            android:src="@drawable/brilho"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/preto2"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <View
            android:id="@+id/view6"
            android:layout_width="297dp"
            android:layout_height="383dp"
            android:layout_marginBottom="172dp"
            android:background="@drawable/fundo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/confirmado"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/confirm"
            android:onClick="next"
            app:layout_constraintBottom_toBottomOf="@+id/view6"
            app:layout_constraintEnd_toEndOf="@+id/view6"
            app:layout_constraintHorizontal_bias="0.996"
            app:layout_constraintStart_toStartOf="@+id/view6"
            app:layout_constraintTop_toTopOf="@+id/view6"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="269dp"
            android:layout_height="351dp"
            android:text="Este aplicativo foi usado para o trabalho de conclusão de curso do IFMS dos estudantes:\nDiego Moraes (@diegovskrbm) e Geovanna Nascimento (@geordtl).\nOrientadora: Elisangela Citro Turci.\n\nIcon made by Freepik from www.flaticon.com - Abelha, arara, aranha, bloco abc, panda, elefante.\nIcon made by Smashicons from www.flaticon.com - Boca, esquilo\nIcon made by Flat Icons from www.flaticon.com - Onça-pintada, Orangotango\nIcon made by Eucalyp from www.flaticon.com - Estrela-do-mar Gif do arco-íris feito por @lauraarpaz \nVídeos das vogais feito pelo canal Multigestos, disponibilizado na plataforma Youtube, em 30 de Agosto de 2016."
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/view6"
            app:layout_constraintEnd_toEndOf="@+id/view6"
            app:layout_constraintStart_toStartOf="@+id/view6"
            app:layout_constraintTop_toTopOf="@+id/view6"

            />


</androidx.constraintlayout.widget.ConstraintLayout>
